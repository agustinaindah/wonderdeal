<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>

        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>

    </style>

    <style name="AppTheme.Search" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <!-- Define your custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Define color properties as desired -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHighlight">@color/material_amber</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!-- Define window properties as desired -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTheme.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TitleProductDetail" parent="MatchWrapLayout">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="AppTheme.Settings.Title" parent="MatchWrapLayout">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--item product-->
    <style name="AppTheme.ItemProduct.Title" parent="MatchWrapLayout">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorPrimary</item>
        <!--The size of the text appear on label in false state -->
        <item name="android:textSize">14sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.Headline" parent="MatchWrapLayout">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/material_grey_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ProductTitle.Caps" parent="AppTheme.ProductTitle">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.ProductTitle" parent="WrapWrapLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/material_grey_blue</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="icon_60">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="icon_80">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <!--begin button style-->

    <style name="ButtonColoredFB" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/color_facebook</item>
    </style>

    <style name="ButtonColoredTwitter" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/color_twitter</item>
    </style>

    <style name="ButtonColoredGreen" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/material_green</item>
    </style>

    <style name="ButtonColoredBlue" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/material_blue</item>
    </style>

    <style name="ButtonColoredRed" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/material_red</item>
    </style>

    <style name="ButtonColoredAmber" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/material_amber</item>
    </style>

    <style name="ButtonColoredYellow" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/material_yellow</item>
    </style>

    <style name="ButtonColoredPurple" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/material_purple</item>
    </style>

    <style name="ButtonColoredPrimary" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="ButtonColoredPrimaryDark" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonColoredPurpleDeep" parent="AppTheme.Button.Colored">
        <item name="colorButtonNormal">@color/material_purple_deep</item>
    </style>

    <style name="ButtonGreen" parent="AppTheme.Button">
        <item name="android:textColor">@color/material_green</item>
    </style>

    <style name="ButtonPurple" parent="AppTheme.Button">
        <item name="android:textColor">@color/material_purple</item>
    </style>

    <style name="ButtonPurpleDeep" parent="AppTheme.Button">
        <item name="android:textColor">@color/material_purple_deep</item>
    </style>

    <style name="ButtonPrimary" parent="AppTheme.Button">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonPrimaryDark" parent="AppTheme.Button">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonGrey" parent="AppTheme.Button">
        <item name="android:textColor">@color/material_grey_blue</item>
    </style>

    <!--base button-->
    <style name="AppTheme.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/flat_clouds</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--end button style-->


    <style name="AppTheme.Spinner" parent="MatchWrapLayout">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/material_amber</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <!--begin text field-->

    <style name="AppTheme.Text.Password" parent="AppTheme.Text.Edit">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="AppTheme.Text.Edit" parent="AppTheme.Text">
        <item name="android:singleLine">true</item>
    </style>

    <!--base text field-->
    <style name="AppTheme.Text" parent="MatchWrapLayout">
        <item name="android:background">@color/flat_clouds</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.EditText" parent="MatchWrapLayout">
        <item name="android:background">@color/grey_review</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.EditTextMaterial" parent="MatchWrapLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!--end text field-->

    <style name="WrapWrapLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchMatchLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchWrapLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Slidding Tabs-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--end slidding tabs-->

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorTextPrimaryDark</item>
    </style>

</resources>
