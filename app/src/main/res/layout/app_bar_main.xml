<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MatchMatchLayout"
    android:fitsSystemWindows="true"
    tools:context="id.wonderdeal.wonderdealapps.features.main.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        style="@style/MatchWrapLayout"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_wonderdeal_white"/>

            <RelativeLayout
                android:id="@+id/search_layout"
                style="@style/MatchWrapLayout"
                android:layout_below="@+id/toolbar"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin">
                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/corners"
                    android:drawableRight="@drawable/ic_search_main"
                    android:gravity="left|center_horizontal"
                    android:hint="@string/search"
                    android:padding="7dp"
                    android:textColorHint="#616161"
                    android:textSize="16sp" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabsHome"
            style="@style/MatchWrapLayout"
            app:tabMode="fixed"
            app:tabGravity="center"
            app:tabTextColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            app:tabIndicatorColor="@android:color/white" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpHome"
        style="@style/MatchMatchLayout"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <include layout="@layout/view_fragment_container" />

    <!--<android.support.v4.widget.NestedScrollView
        style="@style/MatchMatchLayout"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v4.widget.NestedScrollView>-->

</android.support.design.widget.CoordinatorLayout>
