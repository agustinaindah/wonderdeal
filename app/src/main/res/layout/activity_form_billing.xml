<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatchLayout"
    android:background="@color/flat_clouds">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cardFormBilling"
            style="@style/MatchWrapLayout"
            android:layout_margin="10dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/layFormBilling"
                style="@style/MatchWrapLayout"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    style="@style/MatchWrapLayout"
                    android:layout_marginTop="5dp"
                    android:text="Billing Details"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/flat_clouds" />

                <TextView
                    style="@style/MatchWrapLayout"
                    android:layout_marginTop="10dp"
                    android:text="Nama Lengkap"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputNama"
                    style="@style/TextLabel">

                    <EditText
                        android:id="@+id/edtNama"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    style="@style/MatchWrapLayout"
                    android:layout_marginTop="10dp"
                    android:text="Alamat Lengkap"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputAlamat"
                    style="@style/TextLabel">

                    <EditText
                        android:id="@+id/edtAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:gravity="start"
                        android:inputType="textMultiLine" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    style="@style/MatchWrapLayout"
                    android:layout_marginTop="10dp"
                    android:text="Telp."
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputTelp"
                    style="@style/TextLabel">

                    <EditText
                        android:id="@+id/edtTelp"
                        android:inputType="phone"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    style="@style/MatchWrapLayout"
                    android:layout_marginTop="10dp"
                    android:text="Alamat Email"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputEmail"
                    style="@style/TextLabel">

                    <EditText
                        android:id="@+id/edtEmail"
                        android:inputType="textEmailAddress"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    style="@style/MatchWrapLayout"
                    android:layout_marginTop="10dp"
                    android:text="Order Notes"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputNotes"
                    style="@style/TextLabel">

                    <EditText
                        android:id="@+id/edtNotes"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="start"
                        android:inputType="textMultiLine" />
                </android.support.design.widget.TextInputLayout>
                <!--<TextView
                    style="@style/MatchWrapLayout"
                    android:layout_marginTop="10dp"
                    android:text="Username"
                    android:textSize="14sp" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputNama"
                    style="@style/TextLabel"
                    android:layout_below="@+id/inputName">

                    <EditText
                        android:id="@+id/edtNama"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"/>

                </android.support.design.widget.TextInputLayout>-->


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/btnBilling"
            style="@style/MatchWrapLayout"
            android:layout_below="@+id/cardFormBilling"
            android:text="Billing"
            android:theme="@style/ButtonColoredPrimary" />

    </RelativeLayout>

</ScrollView>