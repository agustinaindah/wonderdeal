            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txtPesananAnda"
            style="@style/MatchWrapLayout"
            android:layout_below="@+id/cardFormBilling"
            android:padding="10dp"
            android:text="Pesanan Anda"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/frPesananAnda"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/txtPesananAnda"
            android:background="@color/colorPrimary" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCheckout"
            style="@style/MatchWrapLayout"
            android:layout_below="@+id/frPesananAnda"
            android:padding="10dp" />

        <LinearLayout
            style="@style/MatchMatchLayout"
            android:layout_below="@+id/rvCheckout"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                style="@style/MatchWrapLayout"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    style="@style/MatchWrapLayout"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPaymentMethod"
                        style="@style/MatchWrapLayout"
                        android:layout_marginLeft="7dp"
                        android:padding="5dp"
                        android:text="@string/label_payment_method"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:background="@color/colorPrimary" />

                    <RadioGroup
                        android:id="@+id/rgPaymentMethod"
                        android:layout_width="340dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <RadioButton
                            android:id="@+id/rbCod"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cash On Delivery" />

                        <RadioButton
                            android:id="@+id/rbTransfer"
                            android:layout_width="350dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Transfer Bank" />

                        <!-- <RadioButton
                             android:id="@+id/rbCreditCard"
                             android:layout_width="350dp"
                             android:layout_height="wrap_content"
                             android:layout_weight="1"
                             android:text="Credit Card" />-->
                    </RadioGroup>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/MatchWrapLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    style="@style/MatchWrapLayout"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TableLayout
                        style="@style/MatchWrapLayout"
                        android:stretchColumns="1">

                        <!-- <TableRow>

                             <TextView
                                 android:layout_width="100dp"
                                 android:layout_column="1"
